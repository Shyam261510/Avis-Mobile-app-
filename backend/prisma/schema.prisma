
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email String @unique
  password String
  chat Chat[]
  botPressUserKey String?
  document Document[]
  profileInfo ProfileInfo? @relation("ProfileInfo")
  createdAt DateTime @default(now())
}
model ProfileInfo{
   id String @id @default(auto()) @map("_id") @db.ObjectId
   DOB              String
  country           String
  destination       String
  field_of_Interest String
  education         String
  GPA               String
  experience        String
  budget            String
  userId            String @unique @db.ObjectId
  user              User @relation("ProfileInfo",references: [id],fields: [userId])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
model Chat{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId @unique  // here userId is basically the consultant ID because consultant is going to Create application 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
}

model Message {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  userMessage String
  chatId      String       @db.ObjectId
  chat        Chat         @relation(fields: [chatId], references: [id], onDelete: Cascade)
  botMessages BotMessage[] // one-to-many relation
}

model BotMessage {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  option     String[]
  botResponse    String
  messageId  String   @db.ObjectId
  message    Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model Document{
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fileName String
  size Int
  uri String
  documentTitle String
  userId String @db.ObjectId
  user User @relation(fields: [userId],references: [id])
}